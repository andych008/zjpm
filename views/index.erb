<%= erb :header %>

<h1>浙江各城市PM<sub>2.5</sub>监测数据</h1>

<p><%= @matters.first.date unless @matters.empty? %></p>

<table id="pm">
  <thead>
    <tr>
      <th>城市</th>
      <th>PM<sub>2.5</sub>浓度</th>
      <th>AQI</th>
      <th>等级</th>
    </tr>
  </thead>
  <tbody>
  <% @matters.each do |m| %>
    <tr>
      <td><%= m.city %></td>
      <td><%= m.pm %> ug/m3</td>
      <td><%= m.aqi[0] %></td>
      <td style="background:#<%= m.aqi[2] %>"><%= m.aqi[1] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>AQI图示</h2>
<table class="aqi-intro">
  <% aqi_table_rows.each do |r| %>
    <%= r %>
  <% end %>
</table>

<%= erb :footer %>
